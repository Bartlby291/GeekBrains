#Пункт 1
echo Hello world! > file1
cp file1  file2
ln -s file1 file3
ln file1 file4
ls -li
rm file1
ls -li
cat file2
cat file3
cat file4
#Пункт 2
mv file2 copy
mv file3 softlink
mv file4 hardlink
mkdir links
mv copy softlink hardlink links/
#Пункт 3
echo test test test > file1
echo test test > file2
chmod 664 file1     
chmod ugo-rwx file1
chmod ug+rw file1
chmod o+r file1 
chmod 644 file2
chmod ugo-rwx file2
chmod u+rw file2
chmod go+r file2
#Пункт 4
useradd -m -s /bin/bash ivan
sudo usermod -G 4 ivan
#Пункт 5
sudo groupadd developers
sudo useradd -m -G developers -s /bin/bash ivanov
sudo useradd -m -G developers -s /bin/bash petrov
sudo useradd -m -G developers -s /bin/bash sidorov
sudo mkdir /work
sudo chgrp developers /work
sudo chmod g+rw /work
#Пункт 6
sudo mkdir /work/sharing
sudo chgrp developers /work/sharing
sudo chmod g+rw /work/sharing
sudo chmod o+t /work/sharing
#Пункт 7
sudo mkdir /secret
chmod ugo-r /secret
